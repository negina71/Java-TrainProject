public class App {
	public static void main(String[] args) {

		Locomotive locomotiveHead = new LocomotiveBuilder().withManufacturer("DB").withYear(2020).withSerialNum("101")
				.withYear(1900).withType(LocomotiveType.DIESEL).build();
