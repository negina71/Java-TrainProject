package com.mci.model;

/**
 * @author Negin Ashrafi
 * Abstract base class representing a component of a train. This class implements the TrainInterface and
 * provides methods to set and get information about the train component, such as its year, manufacturer, and serial number.
 * It also defines pointers to the next and previous components in the train. Subclasses of this class can be used
 * to represent different types of train components, such as locomotives, wagons, and cabooses.
 */
public abstract class TrainComponents implements TrainInterface {

	private int year;
	private String manufacturer;
	private String serialNum;
	private TrainComponents next = null;
	private TrainComponents prev = null;

	  
    /**
     * Constructs a train component with the given manufacturer, serial number, and year.
     * @param manufacturer the manufacturer of the train component
     * @param serialNum the serial number of the train component
     * @param year the year in which the train component was manufactured
     */
	public TrainComponents(String manufacturer, String serialNum, int year) {
		this.manufacturer = manufacturer;
		this.serialNum = serialNum;
		this.year = year;

	}

	public TrainComponents() {
	}

	public int getYear() {
		return this.year;
	}

	public void setYear(int year) {
		this.year = year;
	}

	public String getManufacturer() {
		return manufacturer;
	}

	public void setManufacturer(String manufacturer) {
		this.manufacturer = manufacturer;
	}

	public String getSerialNum() {
		return serialNum;
	}

	public void setSerialNum(String serialNum) {
		this.serialNum = serialNum;
	}

	public TrainComponents getNext() {
		return next;
	}

	public void setNext(TrainComponents next) {
		this.next = next;
	}

	public TrainComponents getPrev() {
		return prev;
	}

	public void setPrev(TrainComponents prev) {
		this.prev = prev;
	}


}
