package com.mci.model;


public class WagonBuilder  {
    private Wagon w=new Wagon();


  

    public WagonBuilder withCapacity(int capacity) {
        this.w.setCapacity(capacity);
        return this;
    }

    public WagonBuilder withWeight(double weight) {
        this.w.setWeight(weight);
        return this;
      }
    
     
    
      public WagonBuilder withLenght(double lenght) {
        this.w.setLenght(lenght);
        return this;
      } 
   
public Wagon build(){
    return new Wagon(w.getWeight(), w.getLenght(), w.getCapacity());
}

}
