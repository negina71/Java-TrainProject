package com.mci.model;

import com.mci.model.enums.WagonType;

public class Wagon extends TrainComponents {
	private int capacity;
	private WagonType type;
	private Wagon next;
	private Wagon prev;
	
	public Wagon(String manufacturer, int serialNum, int year, WagonType type, int capacity) {
		super(manufacturer, serialNum, year);
		this.capacity = capacity;
		this.type=type;
	}

	public Wagon() {
	};

	public int getCapacity() {
		return this.capacity;
	}

	public void setCapacity(int capacity) {

		this.capacity = capacity;
	}

	@Override
	public String toString() {
		return "Wagon [capacity=" + capacity + ", next=" + next + ", prev=" + prev + ", getWeight()=" + getWeight()
				+ ", getLenght()=" + getLenght() + ", getYear()=" + getYear() + ", getManufacturer()="
				+ getManufacturer() + ", getSerialNum()=" + getSerialNum() + ", getType()=" + getType()
				+ ", toString()=" + super.toString() + ", getClass()=" + getClass() + ", hashCode()=" + hashCode()
				+ "]";
	}

	public WagonType getType() {
	
		return this.type;
	}
	public void setType(WagonType type) {
		this.type=type;
	}



}
